//- index.pug
extends layouts/layout.pug

block title
  title #{title}

block content
  .main
    .container
      include partials/breadcrumb.pug
      div(class="row margin-bottom-40")
        include partials/sidebar.pug
        div(class="col-md-9 col-sm-9")
          h1 Login
          if error
            div(class="alert alert-danger")
              =error
          div(class="content-form-page")
            .row
              div(class="col-md-7 col-sm-7")
                form(class="form-horizontal form-without-legend",role="form",action="/login",method="post")
                  div(class="form-group")
                    label(for="email",class="col-lg-4 control-label") Email
                      span(class="require") *
                    div(class="col-lg-8")
                      input(type="text",class="form-control",id="email",name="email")
                  div(class="form-group")
                    label(for="password",class="col-lg-4 control-label") Password
                      span(class="require") *
                    div(class="col-lg-8")
                      input(type="password",class="form-control",id="password",name="password")
                  .row
                    div(class="col-lg-8 col-md-offset-4 padding-left-0")
                      a(href="/forgot") Forgot Password?
                  .row
                    div(class="col-lg-8 col-md-offset-4 padding-left-0 padding-top-20")
                      button(type="submit",class="btn btn-primary") Login