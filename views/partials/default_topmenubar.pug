.header
  .container
    a(class="site-logo",href="index.html")
      img(src="/corporate/img/logos/logo-corp-red.png",alt="Metronic FrontEnd")
    a(href="javascript:void(0);",class="mobi-toggler")
      i(class="fa fa-bars")
    div(class="header-navigation pull-right font-transform-inherit")
      ul
        each item,index in menu
          li(class="dropdown")
            a(class="dropdown-toggle",data-toggle="dropdown",data-target="#",href="javascript:;")
              =item.menu.name
            ul(class="dropdown-menu")
              if item.menu.type=='normal'
                each submenu in item.submenu
                  li
                    a(href=submenu.menu.link)
                      =submenu.menu.name
              else
                li
                  div(class="header-navigation-content")
                    .row
                      each category in item.categories
                        div(class="col-md-4 header-navigation-col")
                          h4 
                            =category.category
                          ul
                            each megamenu in category.submenu
                              li
                                a(href=megamenu.menu.link)
                                  =megamenu.menu.name
